<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sensoftindia.allinonestatus.activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@drawable/back"
                android:paddingTop="50dp"
                android:gravity="center|top">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:elevation="20dp"
                    android:background="@drawable/notification_indicator_drawable">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_log"
                        android:tint="@color/back_colorr"
                        android:padding="15dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/back_second">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:paddingBottom="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            app:hintTextAppearance="@style/EditTextHintStyle">

                            <com.sensoftindia.allinonestatus.widget.MyEdittextLight
                                android:id="@+id/ed_login_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Mobile number"
                                android:capitalize="words"
                                android:inputType="number"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:textColor="@color/text_color_golden"
                                android:textColorHint="@color/text_color_golden" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            app:passwordToggleEnabled="true"
                            app:hintTextAppearance="@style/EditTextHintStyle">

                            <com.sensoftindia.allinonestatus.widget.MyEdittextLight
                                android:id="@+id/ed_login_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textColor="@color/text_color_golden"
                                android:textColorHint="@color/text_color_golden" />


                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp">

                        <com.sensoftindia.allinonestatus.widget.MyTextviewLight
                            android:id="@+id/tv_forgotpass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Forgot password"
                            android:paddingRight="10dp"
                            android:gravity="right"
                            android:textStyle="normal"
                            android:textColor="@color/text_color_golden"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="22dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.sensoftindia.allinonestatus.widget.MyButtonLight
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/sign_in"
                        android:gravity="center"
                        android:textColor="@color/back_colorr"
                        android:textAllCaps="true"
                        android:background="@drawable/button"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.sensoftindia.allinonestatus.widget.MyTextviewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/not_register"
                    android:gravity="center"
                    android:textColor="@color/back_colorr"/>

                <com.sensoftindia.allinonestatus.widget.MyTextviewLight
                    android:id="@+id/tv_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_here"
                    android:gravity="center"
                    android:textColor="@color/text_color_golden"/>

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>
